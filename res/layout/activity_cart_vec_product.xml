<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vectorcalculator.CartVecProduct" >

      <TextView
        android:id="@+id/LabelX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="63dp"
        android:text="X1:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/LabelY1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/LabelX1"
        android:layout_below="@+id/LabelX1"
        android:layout_marginTop="21dp"
        android:text="Y1:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/LabelX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/LabelY1"
        android:layout_below="@+id/LabelY1"
        android:layout_marginTop="22dp"
        android:text="X2:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/LabelY2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/LabelX2"
        android:layout_below="@+id/LabelX2"
        android:layout_marginTop="23dp"
        android:text="Y2:"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <EditText
        android:id="@+id/inputX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LabelY1"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" />
    <EditText
        android:id="@+id/inputY1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LabelY1"
        android:layout_alignBottom="@+id/LabelY1"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" />
    <EditText
        android:id="@+id/inputX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LabelX2"
        android:layout_alignBottom="@+id/LabelX2"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" >
    </EditText>
    <EditText
        android:id="@+id/inputY2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LabelY2"
        android:layout_alignBottom="@+id/LabelY2"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" />
    
      <Button
        android:id="@+id/btnDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputY2"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/LabelY2"
        android:text="Draw Vector" />

</RelativeLayout>
